generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  createdAt Int
  updatedAt Int
  login     String @unique
  password  String
  version   Int    @default(1)
}

model Track {
  id          String     @id @default(uuid())
  name        String
  artistId    String?
  albumId     String?
  duration    Int
  Favorites   Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
}

model Artist {
  id          String     @id @default(uuid())
  name        String
  grammy      Boolean    @default(false)
  Favorites   Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
}

model Album {
  id          String     @id @default(uuid())
  name        String
  artistId    String?
  year        Int
  Favorites   Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
}

model Favorites {
  id      Int      @id @default(0)
  artists Artist[]
  albums  Album[]
  tracks  Track[]
}
