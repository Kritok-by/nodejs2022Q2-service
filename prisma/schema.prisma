
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  createdAt Int
  updatedAt Int
  login String @unique
  password  String
  version Int @default(1)
  @@map("users")
}

model Track {
  id String     @id @default(uuid())
  name String
  artistId String?
  albumId String?
  duration Int
  @@map("tracks")
}

model Artist {
  id String     @id @default(uuid())
  name String
  grammy Boolean    @default(false)
  @@map("artists")
}

model Album {
  id String     @id @default(uuid())
  name String
  artistId String?
  year Int
  @@map("albums")
}

model Favorites {
  id Int     @id @default(0)
  artists String[]
  albums String[]
  tracks String[]
  @@map("favorites")
}